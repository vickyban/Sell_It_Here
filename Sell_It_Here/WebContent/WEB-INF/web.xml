<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Sell_It_Here</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>LoggedInUser</filter-name>
    <filter-class>filters.LoggedInUser</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoggedInUser</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>RegisterUser</servlet-name>
    <servlet-class>controllers.RegisterUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterUser</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controllers.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserProfileEdit</servlet-name>
    <jsp-file>/userPages/edit.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserProfileEdit</servlet-name>
    <url-pattern>/user/profile/edit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserProfile</servlet-name>
    <servlet-class>controllers.Profile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserProfile</servlet-name>
    <url-pattern>/user/profile</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductDetail</servlet-name>
    <servlet-class>controllers.ProductDetail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductDetail</servlet-name>
    <url-pattern>/products/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductDetail</servlet-name>
    <url-pattern>/products/product/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductDetail</servlet-name>
    <url-pattern>/products/product/new</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SearchProduct</servlet-name>
    <servlet-class>controllers.SearchProduct</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchProduct</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>HomePage</servlet-name>
    <servlet-class>controllers.Home</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomePage</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>
</web-app>